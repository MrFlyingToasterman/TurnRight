<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="turnright.yes.dmusiolik.turnright.MainActivity">

    <EditText
        android:id="@+id/txt_d"
        android:layout_width="112dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="D"
        android:inputType="number|numberSigned|numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/txt_x"
        app:layout_constraintTop_toBottomOf="@+id/txt_x2" />

    <EditText
        android:id="@+id/txt_x3"
        android:layout_width="112dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="X³"
        android:inputType="number|numberSigned|numberDecimal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/txt_x"
        android:layout_width="112dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="X"
        android:inputType="number|numberSigned|numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/txt_x3"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/txt_x2"
        android:layout_width="112dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="X²"
        android:inputType="number|numberSigned|numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/txt_x3"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="116dp"
        android:layout_height="95dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:onClick="calc"
        android:text="Calc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_x2"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/txt_output"
        android:layout_width="359dp"
        android:layout_height="386dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_d"
        tools:layout_editor_absoluteX="16dp" />

</android.support.constraint.ConstraintLayout>
